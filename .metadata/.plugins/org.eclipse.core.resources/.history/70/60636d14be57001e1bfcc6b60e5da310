package Seccio1;

import java.io.File;

public class ej1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		File carpeta = new File(args[0]);
		String name = carpeta.getName();
		System.out.println("Nombre archivo: " + name);

		String ruta = carpeta.getPath();
		System.out.println("Ruta del archivo: " + ruta);

		boolean puedeLeer = carpeta.canRead();
		System.out.println("Se puede leer: " + puedeLeer);

		boolean puedeEscribir = carpeta.canWrite();
		System.out.println("Se puede escribir:" + puedeEscribir);

		if (carpeta.exists()) {
			System.out.println("El archvio existe");
		} else
			System.out.println("El archvio NO existe");
		
